<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <TextView
            android:id="@+id/welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Welcome to SelfieMe"
            android:textColor="#669900"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/icon_flag"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginRight="6dip"
            android:contentDescription="TODO"
            android:src="@drawable/bangladesh_flag" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4sp"
            android:gravity="center"
            android:maxLines="2"
            android:text="Â© Mahbubul Syeed \n (msyeed.weebly.com)"
            android:textColor="#99CC00"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp"
            android:gravity="center"
            android:text="Features"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/todoItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:gravity="left"
            android:text="List menu item"
            android:textColor="#669900"
            android:textSize="17sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/primerdivisor"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#ffffff" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:padding="6dip" >

            <ImageView
                android:id="@+id/icon_takepic"
                android:layout_width="50dp"
                android:layout_height="fill_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="6dip"
                android:contentDescription="TODO"
                android:src="@drawable/camera" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_alignWithParentIfMissing="true"
                android:layout_marginBottom="15sp"
                android:layout_toRightOf="@+id/icon_takepic"
                android:gravity="center_vertical"
                android:lines="5"
                android:text="Click to open the camera."
                android:textSize="17sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:padding="6dip" >

            <ImageView
                android:id="@+id/icon_help"
                android:layout_width="50dp"
                android:layout_height="fill_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="6dip"
                android:contentDescription="TODO"
                android:src="@drawable/btn_help" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_alignWithParentIfMissing="true"
                android:layout_marginBottom="10sp"
                android:layout_toRightOf="@id/icon_help"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text="Open User Guide"
                android:textSize="17sp" />
        </RelativeLayout>

       <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:padding="6dip" >

            <ImageView
                android:id="@+id/icon_rotate"
                android:layout_width="50dp"
                android:layout_height="fill_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="6dip"
                android:contentDescription="TODO"
                android:src="@drawable/rotate" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_alignWithParentIfMissing="true"
                android:layout_marginBottom="10sp"
                android:layout_toRightOf="@id/icon_rotate"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text="Rotate the image once"
                android:textSize="17sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/contextTodoItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:gravity="left"
            android:maxLines="3"
            android:text="Caution!"
            android:textColor="#669900"
            android:textSize="17sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/primerdiviso"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#ffffff" />

        <TextView
            android:id="@+id/caution_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:gravity="left"
            android:maxLines="10"
            android:text="You need to have a camera app installed in your device and an external memory."
            android:textColor="#669900"
            android:textSize="17sp"
             />
    </LinearLayout>

</ScrollView>